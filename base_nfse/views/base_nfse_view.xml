<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="base_nfse_form_view" model="ir.ui.view">
			<field name="name">base.nfse.form</field>
			<field name="model">base.nfse</field>
			<field name="arch" type="xml">
				<form string="Base NFS-e">
					<header>
						<button name="send_rps" string="Enviar a NFS-e" type="object"
							class="oe_highlight" />
						<button name="print_pdf" string="Gerar PDF" type="object"
							class="oe_highlight" />
					</header>
					<group string="Base NFS-e">
						<field name="name" />
						<field name="certificate" />
						<field name="password" />
						<field name="invoice_id" />
						<field name="city_code" />
					</group>
				</form>
			</field>
		</record>

		<record id="base_nfse_tree_view" model="ir.ui.view">
			<field name="name">base.nfse.tree</field>
			<field name="model">base.nfse</field>
			<field name="arch" type="xml">
				<tree string="NFS-e">
					<field name="name" />
					<field name="invoice_id" />
					<field name="city_code" />				
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="base_nfse_tree">
			<field name="name">NFS-e Base</field>
			<field name="res_model">base.nfse</field>
			<field name="type">ir.actions.act_window</field>			
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>
		<menuitem parent="account.menu_finance_receivables" action="base_nfse_tree"
			id="base_nfse_menu" />

	</data>
</openerp>